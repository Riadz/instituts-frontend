{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": false,
    // 
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}